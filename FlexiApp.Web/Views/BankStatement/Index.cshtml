@{
    ViewBag.Title = "Bank Statement";
}
@model FlexiApp.Web.ViewModels.GoogleDriveViewModel
@using (Html.BeginForm("Send", "BankStatement", FormMethod.Post, new { @class = "form-horizontal" }))
{
    if(null != TempData["alertMessage"])
    {
        @Html.Raw(TempData["alertMessage"])
    }
    <div>
        <h4>Bank Statement - JSON</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Google Drive ClientId</label>
            <div class="col-md-6">
                @Html.TextBoxFor(a => a.ClientId, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.ClientId)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Google Drive ProjectId</label>
            <div class="col-md-6">
                @Html.TextBoxFor(a => a.ProjectId, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.ProjectId)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Google Drive ClientSecret</label>
            <div class="col-md-6">
                @Html.TextBoxFor(a => a.ClientSecret, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.ClientSecret)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Google Drive Folder Download</label>
            <div class="col-md-6">
                @Html.TextBoxFor(a => a.DownloadFolder, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.DownloadFolder)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Google Drive Folder Upload</label>
            <div class="col-md-6">
                @Html.TextBoxFor(a => a.UploadFolder, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.UploadFolder)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
